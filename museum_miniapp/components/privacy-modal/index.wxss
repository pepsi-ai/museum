.privacy-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.modal-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.link {
  color: #007AFF;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  border: none;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #007AFF;
  color: #fff;
} 