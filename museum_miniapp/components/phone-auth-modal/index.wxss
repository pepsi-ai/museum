.phone-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
}

.modal-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.app-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.app-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.phone-number {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  margin: 30rpx 0;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  border: none;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #007AFF;
  color: #fff;
}

.other-phone {
  text-align: center;
  font-size: 28rpx;
  color: #007AFF;
  margin-top: 30rpx;
  padding: 10rpx;
} 