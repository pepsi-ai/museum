.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  padding: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 已认证状态样式 */
.status-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 60rpx 30rpx;
  margin-top: 20rpx;
}

.status-icon {
  width: 300rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.status-text {
  font-size: 32rpx;
  color: #4169E1;
  font-weight: 500;
  margin-bottom: 40rpx;
}

.info-box {
  width: 90%;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 表单样式 */
.form-container {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  color: #333;
}

.tips-container {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 40rpx 0;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.tips-text {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 40rpx;
  margin-bottom: 10rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #4169E1;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin: 40rpx 0;
}

.submit-btn.disabled {
  background-color: #ccc;
  color: #fff;
} 