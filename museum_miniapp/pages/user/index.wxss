.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
}

/* 用户信息区域 */
.user-info {
  background-color: #fff;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.info-wrap {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  display: block;
}

.nickname.logged-in {
  color: #333;  /* 登录后显示黑色 */
}

.nickname.not-logged-in {
  color: #666;  /* 未登录时显示深灰色 */
}

.user-id {
  font-size: 28rpx;
  color: #666;  /* 修改为灰色 */
  display: block;
}

/* 功能列表 */
.menu-list {
  margin-top: 24rpx;
  background-color: #fff;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
} 