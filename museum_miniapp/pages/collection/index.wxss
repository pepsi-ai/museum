/* 新增标签切换栏样式 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 26rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #4169E1;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx;
  height: 6rpx;
  background-color: #4169E1;
  border-radius: 3rpx;
}

/* 保留原有样式 */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 分类列表样式 */
.category-list {
  position: sticky;
  top: 0;
  z-index: 1;
  background-color: #fff;
  white-space: nowrap;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.category-item {
  display: inline-block;
  margin-right: 30rpx;
  padding: 12rpx 24rpx;
  font-size: 30rpx;
  color: #666;
  border-radius: 30rpx;
}

.category-item.active {
  color: #fff;
  background-color: #4169E1;
}

/* 藏品列表样式 */
.collection-list {
  display: flex;
  flex-direction: column;
}

.collection-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.collection-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.collection-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

.collection-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.collection-dynasty {
  font-size: 26rpx;
  color: #4169E1;
  margin-bottom: 10rpx;
}

.collection-desc {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.like-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.like-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 加载更多样式 */
.loading, .no-more, .empty {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

