.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  padding: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-container {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  color: #333;
}

.tips {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.submit-btn {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #4169E1;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin: 40rpx auto;
}

.submit-btn.disabled {
  background-color: #ccc;
  color: #fff;
} 