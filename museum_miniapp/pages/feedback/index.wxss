.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 反馈部分公共样式 */
.feedback-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

/* 反馈类型选择 */
.feedback-types {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.type-item:last-child {
  border-bottom: none;
}

.radio {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  margin-right: 20rpx;
  position: relative;
}

.radio.selected {
  border-color: #4169E1;
}

.radio.selected::after {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #4169E1;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.type-item text {
  font-size: 28rpx;
  color: #333;
}

/* 反馈内容区域 */
.content-area {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  position: relative;
}

textarea {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

.word-count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 图片上传区域 */
.image-uploader {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.camera-icon {
  width: 30rpx;
  height: 24rpx;
  border: 2rpx solid #999;
  border-radius: 4rpx;
  position: relative;
}

.camera-icon::after {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  border: 2rpx solid #999;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.upload-btn text {
  font-size: 24rpx;
  color: #999;
}

/* 联系方式 */
.contact-input {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 25rpx 20rpx;
}

.contact-input input {
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  color: #333;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 90rpx;
  background-color: #4169E1;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
} 