/* 页面整体容器 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  margin-bottom: 20rpx;
}

.search-box icon {
  margin-right: 12rpx;
  color: #999;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
}

.search-placeholder {
  color: #999;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 360rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-info {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
  color: #fff;
}

.banner-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.banner-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.banner-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  filter: brightness(0) invert(1); /* 使图标变为白色 */
}

.banner-tag {
  display: inline-block;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  background-color: rgba(65, 105, 225, 0.8);
  border-radius: 20rpx;
  margin-top: 8rpx;
}

.banner-label {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
  margin-right: 4rpx;
}

/* 空轮播图占位 */
.empty-banner {
  width: 100%;
  height: 360rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  background-color: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-banner text {
  font-size: 28rpx;
  color: #999;
}

/* 在线预约参观卡片 */
.booking-card {
  background-color: #4169E1;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.booking-info {
  color: #fff;
}

.booking-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.booking-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.booking-btn {
  background-color: #fff;
  color: #4169E1;
  font-size: 28rpx;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  border: none;
  min-width: 160rpx;
}

/* 展览推荐区域 */
.exhibition-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 120rpx; /* 为底部导航留出空间 */
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.more {
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.more-icon {
  margin-left: 4rpx;
}

/* 展览列表 */
.exhibition-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 0 10rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.image-container {
  position: relative;
  width: 100%;
  height: 480rpx;
  border-radius: 12rpx 12rpx 0 0;
  overflow: hidden;
}

.image-container image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx 12rpx 0 0;
}

.exhibition-item {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  width: calc(100% - 20rpx);
  margin: 0 auto 15rpx;
}

.exhibition-info {
  padding: 24rpx;
  position: relative;
}

.exhibition-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  padding-right: 100rpx;
  margin-bottom: 20rpx;
}

.exhibition-meta {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.meta-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.meta-text {
  font-size: 28rpx;
  color: #666;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.exhibition-date, .exhibition-location-text {
  font-size: 26rpx;
  color: #666;
}

.exhibition-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.reserve-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #eee;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 20rpx;
  padding: 10rpx 0;
}

.tab-item.active {
  color: #4169E1;
}

.tab-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

/* 加载更多 */
.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 展览列表状态标签 */
.status-tag {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 10;
  font-weight: 500;
  text-align: center;
}

.status-tag.upcoming {
  background-color: #e6f7ff;
  color: #1890ff;
  border: none;
}

.status-tag.ongoing {
  background-color: #fff9e6;
  color: #fa8c16;
  border: none;
}

.status-tag.ended {
  background-color: #f5f5f5;
  color: #999;
  border: none;
}

/* 内联状态标签 */
.status-tag-inline {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
  background-color: #0BCA64;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(11, 202, 100, 0.3);
  z-index: 10;
}

.status-tag-inline.upcoming {
  background-color: #4169E1;
  box-shadow: 0 2rpx 8rpx rgba(65, 105, 225, 0.3);
}

.status-tag-inline.ongoing {
  background-color: #0BCA64;
  box-shadow: 0 2rpx 8rpx rgba(11, 202, 100, 0.3);
}

.status-tag-inline.ended {
  background-color: #999999;
  box-shadow: 0 2rpx 8rpx rgba(153, 153, 153, 0.3);
}

/* 详情按钮样式 */
.detail-button {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  background-color: #4169E1;
  color: #fff;
  padding: 12rpx 60rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(65, 105, 225, 0.3);
}

/* 展览位置 */
.exhibition-location {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 加载状态 */
.loading-exhibition {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 空数据状态 */
.empty-exhibition {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 描述部分特殊处理 */
.exhibition-meta.description {
  align-items: flex-start;
  margin-top: 8rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 16rpx;
}

.description-label {
  line-height: 1.6;
  margin-top: 4rpx;
}

.description-content {
  flex: 1;
}

.exhibition-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

/* 展览卡片元素样式 - 纵向布局 */
.exhibition-meta-vertical {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
  padding: 8rpx 0;
}

.meta-label-block {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.description-content {
  width: 100%;
  margin-top: 4rpx;
}

.meta-text {
  font-size: 26rpx;
  color: #666;
}

/* 展览卡片时间位置 */
.exhibition-short-date {
  position: absolute;
  left: 24rpx;
  bottom: 24rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.4);
  z-index: 5;
}
