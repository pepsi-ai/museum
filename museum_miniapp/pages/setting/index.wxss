.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.header {
  padding: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 分组标题 */
.section-title {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 30rpx;
}

/* 设置列表 */
.setting-list {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 32rpx;
  color: #333;
}

.item-right {
  display: flex;
  align-items: center;
}

.item-value {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.item-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 开关样式调整 */
switch {
  transform: scale(0.9);
}

/* 退出登录按钮 */
.logout-btn {
  width: 90%;
  height: 90rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
} 